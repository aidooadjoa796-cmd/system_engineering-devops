#!/usr/bin/env bash
# A Bash script that loops indefinitely and displays "I am invincible!!!" when receiving SIGTERM

# Function to handle SIGTERM signal
handle_term() {
    echo "I am invincible!!!"
}

# Trap SIGTERM and call the function
trap 'handle_term' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
