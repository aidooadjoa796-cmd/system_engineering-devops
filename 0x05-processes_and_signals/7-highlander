#!/usr/bin/env bash
# A Bash script that loops indefinitely and prints "I am invincible!!!" when receiving SIGTERM

# Function to handle SIGTERM
handle_term() {
    echo "I am invincible!!!"
}

# Trap SIGTERM to call handle_term
trap 'handle_term' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
